<RootWidget>:
	
    TabbedPanel:
        pos_hint: {'x': 0, 'y': 0}
        do_default_tab: False 

                                                                                                                                                                                                  
        TabbedPanelItem:
            text: 'Color'
            GridLayout:
            	rows:2
            	cols:7
                Label:
                	text: 'Intensity'
                Label:
                	text: 'Sky R'
                Label:
                	text: 'Sky G'
                Label:
                	text: 'Sky B'
                Label:
                	text: 'L. R'
                Label:
                	text: 'L. G'
                Label:
                	text: 'L. B'


                Slider:
                	orientation: 'vertical'
                    min: 1
                    max: 255
                    on_value: root.set_intensity(self.value)

                Slider:
                	orientation: 'vertical'
                    min: 1
                    max: 255
                    on_value: root.set_red(self.value)
                Slider:
                	orientation: 'vertical'
                    min: 1
                    max: 255
                    on_value: root.set_green(self.value)
                Slider:
                	orientation: 'vertical'
                    min: 1
                    max: 255
                    on_value: root.set_blue(self.value)
                Slider:
                	orientation: 'vertical'
                    min: 1
                    max: 255
                    on_value: root.set_lightning_r(self.value)
                Slider:
                	orientation: 'vertical'
                    min: 1
                    max: 255
                    on_value: root.set_lightning_g(self.value)
                Slider:
                	orientation: 'vertical'
                    min: 1
                    max: 255
                    on_value: root.set_lightning_b(self.value)

             
        TabbedPanelItem:
            text: 'Clouds'           
            FloatLayout:  

                Button:
                    text: 'all off'
                    size_hint: .15, .1
                    pos_hint: {'x': 0, 'y': .05}
                    on_release: root.set_lightning_kind(0)

                Button:
                    text: 'low'
                    size_hint: .15, .1
                    pos_hint: {'x': .15, 'y': .05}
                    on_release: root.set_lightning_kind(30)
                
                Button:
                    text: 'low-medium'
                    size_hint: .15, .1
                    pos_hint: {'x': .3, 'y': .05}
                    on_release: root.set_lightning_kind(90)

                Button:
                    text: 'medium'
                    size_hint: .15, .1
                    pos_hint: {'x': .45, 'y': .05}
                    on_release: root.set_lightning_kind(150)
               
                Button:
                    text: 'strong'
                    size_hint: .15, .1
                    pos_hint: {'x': .6, 'y': .05}
                    on_release: root.set_lightning_kind(210)

                Label:
                	text: 'Energy'
                    size_hint: .1, .1
                    pos_hint: {'x': .8, 'y': .9}


                Slider:
	                orientation: 'vertical'
                    size_hint: .1, .7
                    pos_hint: {'x': .8, 'y': .2}
                    min: 0
                    max: 15
                    on_value: root.set_lightning_energy(self.value)
                
                Label:
                	text: 'Speed'
                    size_hint: .1, .1
                    pos_hint: {'x': .9, 'y': .9}
          
                Slider:        
	                orientation: 'vertical'
                    size_hint: .1, .7
                    pos_hint: {'x': .9, 'y': .2}
                    min: 1
                    max: 100
                    on_value: root.set_speed(self.value)
                
                Label:
                	text: 'Random'
                    size_hint: .1, .1
                    pos_hint: {'x': .85, 'y': .1}

